{% extends "base.html.twig" %}
{% block title %} {{ parent() }} Liste des utilisateurs {% endblock %}
{% block body %}
        {% if role is defined %}
            {% if role is same as('ADMIN') %}
                <h1>Liste des utilisateurs</h1>
                    <table class="table table-hover table-responsive">
                        <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Date de naissance</th>
                            <th>Pays</th>
                            <th>Métier</th>
                            <th>Sexe</th>
                            <th>Email</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        {% for user in liste %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.firstName }}</td>
                                <td>{{ user.birthDate }}</td>
                                <td>{{ user.country }}</td>
                                <td>{{ user.job }}</td>
                                <td>{{ user.gender }}</td>
                                <td>{{ user.email }}</td>
                                <td><a href="index.php?page=user_modif&id={{ user.id }}">Modifier</a></td>
                                <td><a href="index.php?page=users_list&id={{ user.id }}">Supprimer</a></td>
                            </tr>
                        {% endfor %}
                    </table>
                <a href="index.php?page=user_add">Ajouter un utilisateur</a>
        {% if form.valide is defined %}
            {% if form.valide == true %}
                <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
                {% else %}
                    <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
                    {% endif %}
            {% endif %}
        {% else %}
               Vous n'avez pas accès à ce site
        {% endif %}
    {% endif %}
{% endblock %}

